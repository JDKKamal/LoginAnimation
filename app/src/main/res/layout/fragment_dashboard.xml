<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-res"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#EEEEEE"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <ImageView
            android:id="@+id/fragmentdashboardImageView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/image_3" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.4"
            android:background="#0F0F0F" />

        <ImageView
            android:id="@+id/fragmentdashboardMenu2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_menu"
            android:tint="#ffffff" />

        <ImageView
            android:id="@+id/fragmentdashboardMenu1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_search"
            android:tint="#ffffff" />

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="#66000000"
            android:layout_height="wrap_content">

            <devs.mulham.horizontalcalendar.HorizontalCalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:textColorSelected="#ff0000" />
        </android.support.design.widget.AppBarLayout>

        <com.jdkgroup.customview.CircularImageView
            android:id="@+id/fragmentdashboardPic"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/fragmentdashboardUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:alpha="0"
            android:gravity="center"
            android:text="Lakhani Kamlesh"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:textStyle="bold"
            android:typeface="serif" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/fragmentdashboardLinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:alpha="0"
            android:background="#FFFFFF"
            android:gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:src="@drawable/list_0000" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragmentdashboardLinearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:alpha="0"
            android:background="#FFFFFF"
            android:gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="290dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:src="@drawable/list_0001" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragmentdashboardLinearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:alpha="0"
            android:background="#FFFFFF"
            android:gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="240dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:src="@drawable/list_0002" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragmentdashboardLinearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:alpha="0"
            android:background="#FFFFFF"
            android:gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:src="@drawable/list_0000" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

